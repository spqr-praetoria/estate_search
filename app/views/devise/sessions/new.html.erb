<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <img class="mx-auto h-10 w-auto" src="https://tailwindcss.com/plus-assets/img/logos/mark.svg?color=indigo&shade=600" alt="Your Company">
    <h2 class="mt-10 text-center text-2xl font-bold tracking-tight text-gray-900"><%= t('.sign_in') %></h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-900" %>
        <div class="mt-2">
          <%= f.email_field :email, 
              autofocus: true, 
              autocomplete: "email",
              class: "input input-bordered w-full",
              required: true %>
        </div>
      </div>

      <div>
        <div class="flex items-center justify-between">
          <%= f.label :password, class: "block text-sm font-medium text-gray-900" %>
        </div>
        <div class="mt-2">
          <%= f.password_field :password, 
              autocomplete: "current-password",
              class: "input input-bordered w-full",
              required: true %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "checkbox checkbox-primary" %>
          <%= f.label :remember_me, class: "ml-2 text-sm text-gray-900" %>
        </div>
      <% end %>

      <div>
        <%= f.submit t('.sign_in'), class: "btn btn-primary w-full" %>
      </div>

      <div>
        <div class="relative mt-10">
          <div class="absolute inset-0 flex items-center" aria-hidden="true">
            <div class="w-full border-t border-gray-200"></div>
          </div>
          <div class="relative flex justify-center text-sm/6 font-medium">
            <span class="bg-white px-6 text-gray-900">Or</span>
          </div>
        </div>
      </div>
    <% end %>

    <div class="mt-10 text-center text-sm text-gray-500">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>