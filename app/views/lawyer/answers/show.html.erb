<div class="sm:flex sm:items-center">
  <div class="sm:flex-auto">
    <p class="mt-2 text-sm text-gray-700">A list of all questions in the system including their title, category, and status.</p>
  </div>
  <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
    <%= link_to "Back to dashboard", lawyer_root_path, class: "btn btn-primary" %>
  </div>
</div>
<div class="mx-auto mt-8">
  <%# Answer Card %>
  <div class="bg-white shadow-lg rounded-lg border border-gray-200 overflow-hidden">
    <%# Question Reference %>
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-medium text-gray-900 mb-2">Question Reference</h2>
      <div class="bg-gray-50 rounded-lg p-4">
        <h3 class="font-medium text-gray-900"><%= @answer.question.title %></h3>
        <p class="mt-2 text-sm text-gray-600 line-clamp-3"><%= @answer.question.body %></p>
      </div>
    </div>

    <%# Answer Content %>
    <div class="px-6 py-4">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Your Response</h2>
      <div class="prose max-w-none">
        <%= @answer.body %>
      </div>
    </div>

    <%# Fee Information %>
    <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
      <div class="flex justify-between items-center">
        <div>
          <h2 class="text-lg font-medium text-gray-900">Proposed Fee</h2>
          <p class="mt-1 text-sm text-gray-500">The amount you proposed for this answer</p>
        </div>
        <div class="text-2xl font-semibold text-gray-900">
          <%= format_pounds(@answer.proposed_fee) %>
        </div>
      </div>
    </div>

    <%# Payment Status %>
    <% if @answer.payment.present? %>
      <div class="px-6 py-4 border-t border-gray-200">
        <div class="flex justify-between items-center">
          <div>
            <h2 class="text-lg font-medium text-gray-900">Payment Status</h2>
            <p class="mt-1 text-sm text-gray-500">
              Payment from <%= @answer.question.user.name %>
            </p>
          </div>
          <div class="flex items-center gap-2">
            <% case @answer.payment.status %>
            <% when 'pending' %>
              <div class="badge badge-warning">Pending</div>
            <% when 'approved' %>
              <div class="badge badge-success">Paid</div>
            <% when 'rejected' %>
              <div class="badge badge-error">Rejected</div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

    <%# Actions %>
    <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
      <div class="flex justify-end gap-4">
        <%= link_to "Back to Dashboard", lawyer_root_path, 
            class: "btn btn-neutral btn-outline" %>
        <% if @answer.status == 'pending' %>
          <%= link_to "Edit Answer", edit_lawyer_answer_path(@answer), 
              class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
