<%= form_with(model: answer) do |form| %>
  <% if answer.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(answer.errors.count, "error") %> prohibited this answer from being saved:</h2>

      <ul>
        <% answer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :question_id, style: "display: block" %>
    <%= form.text_field :question_id %>
  </div>

  <div>
    <%= form.label :lawyer_id, style: "display: block" %>
    <%= form.text_field :lawyer_id %>
  </div>

  <div>
    <%= form.label :body, style: "display: block" %>
    <%= form.textarea :body %>
  </div>

  <div>
    <%= form.label :proposed_fee, style: "display: block" %>
    <%= form.number_field :proposed_fee %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status, Answer.statuses.keys.map { |status| [ status.humanize, status ] }, { include_blank: true } %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
