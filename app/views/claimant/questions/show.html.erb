<% content_for :title, "Question #{@question.id}" %>

<div class="sm:flex sm:items-center">
  <div class="sm:flex-auto">
    <p class="mt-2 text-sm text-gray-700">Your question and answers.</p>
    <div class="flex items-center gap-2 mt-2">
      <span class="text-sm font-medium text-gray-600">Balance:</span>
      <span class="inline-flex items-center rounded bg-green-100 px-2 py-0.5 text-sm font-semibold text-green-800">
        £<%= number_with_precision(current_user.balance, precision: 2) %>
      </span>
    </div>
  </div>
  <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
    <%= link_to "Back to questions",
        claimant_root_path,
        class: "block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
    %>
  </div>
</div>
<div class="mx-auto mt-8">
  <div class="card bg-base-100 shadow-xl mb-8 border border-gray-300">
    <div class="card-body">
      <div class="flex justify-between items-start mb-4">
        <h2 class="card-title text-2xl"><%= @question.title %></h2>
        <div class="flex items-center gap-4">
          <div class="flex items-center gap-2">
            <span class="text-sm font-medium text-gray-600">Category:</span>
            <% case @question.category %>
            <% when 'general' %>
              <div class="badge badge-neutral badge-lg">General Query</div>
            <% when 'missing_assets' %>
              <div class="badge badge-primary badge-lg">Missing Assets</div>
            <% when 'wills_and_probate' %>
              <div class="badge badge-secondary badge-lg">Wills & Probate</div>
            <% when 'legal_heirship' %>
              <div class="badge badge-warning badge-lg">Legal Heirship</div>
            <% end %>
          </div>
          
          <div class="divider divider-horizontal"></div>
          
          <%= turbo_frame_tag "question_#{@question.id}_status" do %>
            <%= render partial: "claimant/questions/question_status", locals: { question: @question } %>
          <% end %>
        </div>
      </div>

      <div class="prose max-w-none mb-4">
        <%= @question.body %>
      </div>

      <div class="text-sm text-gray-500 text-right">
        Asked by <%= @question.user.first_name %> <%= @question.user.last_name %> on <%= @question.created_at.strftime("%B %d, %Y") %>
      </div>
    </div>
  </div>

  <div class="divider divider-primary text-lg font-semibold">Answers</div>

  <div class="space-y-6">
    <h3 class="text-xl font-semibold mb-4">
      <%= pluralize(@question.answers.length, 'Answer') %>
    </h3>

    <% @question.answers.each do |answer| %>
      <%= turbo_frame_tag dom_id(answer) do %>
        <div class="card bg-base-100 shadow-lg border border-gray-300 mb-4">
          <div class="card-body">
            <% if answer.hidden? %>
              <div class="alert alert-success shadow-lg my-4 bg-green-50">
                <div class="flex items-center gap-4">
                  <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <div>
                    <h3 class="font-bold text-lg text-green-800">Payment Required</h3>
                    <div class="text-base text-green-700">To view this answer, please pay £<span class="font-bold text-lg"><%= answer.proposed_fee %></span></div>
                  </div>
                </div>
              </div>
            <% else %>
              <div class="prose max-w-none mb-4">
                <%= answer.body %>
              </div>
            <% end %>

            <div class="flex justify-between items-center">
              <div class="flex items-center gap-4">
                <div class="text-sm">
                  <span class="font-medium">Answered by:</span>
                  <%= answer.lawyer.first_name %> <%= answer.lawyer.last_name %>
                </div>
                <div class="text-sm text-gray-500">
                  <%= answer.created_at.strftime("%B %d, %Y") %>
                </div>
              </div>

              <div class="flex items-center gap-4">
                <% if answer.hidden? && answer.payment.unpaid? %>
                  <%= button_to "Pay £#{answer.proposed_fee}", 
                              payment_path(answer.payment), 
                              method: :patch,
                              class: "btn btn-primary btn-sm",
                              data: { turbo_frame: dom_id(answer) } %>
                <% else %>
                  <% case answer.payment.status %>
                  <% when 'unpaid' %>
                    <div class="badge badge-neutral">Unpaid</div>
                  <% when 'paid' %>
                    <div class="badge badge-success">Paid</div>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
