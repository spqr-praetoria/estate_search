<% content_for :title, "Question #{@question.id}" %>

<div class="sm:flex sm:items-center">
  <div class="sm:flex-auto">
    <p class="mt-2 text-sm text-gray-700">Your question and answers. </p>
  </div>
  <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
    <%= link_to "Back to questions",
        claimant_root_path,
        class: "block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
    %>
  </div>
</div>
<div class="mx-auto mt-8">
  <%# Question Card %>
  <div class="card bg-base-100 shadow-xl mb-8 border border-gray-300">
    <div class="card-body">
      <div class="flex justify-between items-start mb-4">
        <h2 class="card-title text-2xl"><%= @question.title %></h2>
        <div class="flex items-center gap-4">
          <div class="flex items-center gap-2">
            <span class="text-sm font-medium text-gray-600">Category:</span>
            <% case @question.category %>
            <% when 'general' %>
              <div class="badge badge-neutral badge-lg">General Query</div>
            <% when 'missing_assets' %>
              <div class="badge badge-primary badge-lg">Missing Assets</div>
            <% when 'wills_and_probate' %>
              <div class="badge badge-secondary badge-lg">Wills & Probate</div>
            <% when 'legal_heirship' %>
              <div class="badge badge-warning badge-lg">Legal Heirship</div>
            <% end %>
          </div>
          
          <div class="divider divider-horizontal"></div>
          
          <div class="flex items-center gap-2">
            <span class="text-sm font-medium text-gray-600">Status:</span>
            <% case @question.status %>
            <% when 'open' %>
              <div class="badge badge-success badge-lg">Open for Answers</div>
            <% when 'answered' %>
              <div class="badge badge-info badge-lg">Has Answers</div>
            <% when 'closed' %>
              <div class="badge badge-neutral badge-lg">Closed</div>
            <% end %>
          </div>
        </div>
      </div>

      <div class="prose max-w-none mb-4">
        <%= @question.body %>
      </div>

      <div class="text-sm text-gray-500 text-right">
        Asked by <%= @question.user.first_name %> <%= @question.user.last_name %> on <%= @question.created_at.strftime("%B %d, %Y") %>
      </div>
    </div>
  </div>

  <div class="divider divider-primary text-lg font-semibold">Answers</div>

  <div class="space-y-6">
    <h3 class="text-xl font-semibold mb-4">
      <%= pluralize(@question.answers.length, 'Answer') %>
    </h3>

    <% @question.answers.each do |answer| %>
      <div class="card bg-base-100 shadow-lg border border-gray-300" id="<%= dom_id(answer) %>">
        <div class="card-body">
          <div class="prose max-w-none mb-4">
            <%= answer.body %>
          </div>

          <div class="flex justify-between items-center">
            <div class="flex items-center gap-4">
              <div class="text-sm">
                <span class="font-medium">Answered by:</span>
                <%= answer.lawyer.first_name %> <%= answer.lawyer.last_name %>
              </div>
              <div class="text-sm text-gray-500">
                <%= answer.created_at.strftime("%B %d, %Y") %>
              </div>
            </div>

            <div class="flex items-center gap-4">
              <div class="text-lg font-semibold">
                £<%= answer.proposed_fee %>
              </div>
              <% if answer.payment.unpaid? %>
                <% case answer.payment.status %>
                <% when 'pending' %>
                  <div class="badge badge-warning">Payment Pending</div>
                <% when 'approved' %>
                  <div class="badge badge-success">Paid</div>
                <% when 'rejected' %>
                  <div class="badge badge-error">Rejected</div>
                <% end %>
              <% else %>
                <%= button_to "Pay £#{answer.proposed_fee}", 
                              payments_path, 
                              params: { 
                                payment: { 
                                  answer_id: answer.id,
                                  amount: answer.proposed_fee,
                                  user_id: current_user.id,
                                  status: 'pending'
                                }
                              },
                              class: "btn btn-primary btn-sm",
                              data: { 
                                turbo_confirm: "Are you sure you want to pay £#{answer.proposed_fee} for this answer?" 
                              } %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
