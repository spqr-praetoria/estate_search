<tr id="<%= dom_id(question) %>">
  <td class="whitespace-nowrap py-4 pr-3 pl-4 text-sm font-medium text-gray-900 sm:pl-6"><%= question.id %></td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= question.title.truncate(50) %></td>
  <td class="whitespace-nowrap px-3 py-4 text-sm">
    <% case question.category %>
    <% when 'general' %>
      <div class="badge badge-neutral"><%= question.category.titleize %></div>
    <% when 'missing_assets' %>
      <div class="badge badge-primary"><%= question.category.titleize %></div>
    <% when 'wills_and_probate' %>
      <div class="badge badge-secondary"><%= question.category.titleize %></div>
    <% when 'legal_heirship' %>
      <div class="badge badge-warning"><%= question.category.titleize %></div>
    <% else %>
      <div class="badge badge-accent"><%= question.category.titleize %></div>
    <% end %>
  </td>
  <td class="whitespace-nowrap px-3 py-4 text-sm">
    <% case question.status %>
    <% when 'open' %>
      <div class="badge badge-success"><%= question.status.titleize %></div>
    <% when 'answered' %>
      <div class="badge badge-warning"><%= question.status.titleize %></div>
    <% when 'closed' %>
      <div class="badge badge-neutral"><%= question.status.titleize %></div>
    <% end %>
  </td>
  <td class="whitespace-nowrap px-3 py-4 text-sm">
    <%= question.answers.length %>
  </td>
  <td class="relative whitespace-nowrap py-4 pr-4 pl-3 text-right text-sm font-medium sm:pr-6">
    <div class="flex justify-end gap-2">
      <% if question.answers.present? %>
        <%= link_to "View answers", claimant_question_path(question), data: { turbo: false }, class: "inline-flex items-center rounded-md bg-green-50 px-2.5 py-1.5 text-sm font-semibold text-green-600 shadow-xs ring-1 ring-green-200 ring-inset hover:bg-green-100" %>
      <% else %>
        <%= link_to "Edit", edit_claimant_question_path(question), data: { turbo_frame: dom_id(Question.new) }, class: "inline-flex items-center rounded-md bg-indigo-600 px-2.5 py-1.5 text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
        <%= button_to "Delete", claimant_question_path(question), method: :delete, class: "cursor-pointer inline-flex items-center rounded-md bg-red-600 px-2.5 py-1.5 text-sm font-semibold text-white shadow-xs hover:bg-red-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-600" %>
      <% end %>
    </div>
  </td>
</tr>
