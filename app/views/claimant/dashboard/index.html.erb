<div class="sm:flex sm:items-center">
  <div class="sm:flex-auto">
    <p class="mt-2 text-sm text-gray-700">A list of all questions in the system including their title, category, and status.</p>
  </div>
  <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
    <%= link_to "New Question", new_question_path, class: "block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
  </div>
</div>
<div class="-mx-4 mt-10 ring-1 ring-gray-300 sm:mx-0 sm:rounded-lg">
  <table class="min-w-full divide-y divide-gray-300">
    <thead>
      <tr>
        <th scope="col" class="py-3.5 pr-3 pl-4 text-left text-sm font-semibold text-gray-900 sm:pl-6">ID</th>
        <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Title</th>
        <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Category</th>
        <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Status</th>
        <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Answers</th>
        <th scope="col" class="relative py-3.5 pr-4 pl-3 sm:pr-6">
          <span class="sr-only">Actions</span>
        </th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
      <% @questions.each do |question| %>
        <tr id="<%= dom_id question %>">
          <td class="whitespace-nowrap py-4 pr-3 pl-4 text-sm font-medium text-gray-900 sm:pl-6"><%= question.id %></td>
          <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= question.title %></td>
          <td class="whitespace-nowrap px-3 py-4 text-sm">
            <% case question.category %>
            <% when 'general' %>
              <div class="badge badge-neutral"><%= question.category.titleize %></div>
            <% when 'missing_assets' %>
              <div class="badge badge-primary"><%= question.category.titleize %></div>
            <% when 'wills_and_probate' %>
              <div class="badge badge-secondary"><%= question.category.titleize %></div>
            <% when 'legal_heirship' %>
              <div class="badge badge-warning"><%= question.category.titleize %></div>
            <% else %>
              <div class="badge badge-accent"><%= question.category.titleize %></div>
            <% end %>
          </td>
          <td class="whitespace-nowrap px-3 py-4 text-sm">
            <% case question.status %>
            <% when 'open' %>
              <div class="badge badge-success"><%= question.status.titleize %></div>
            <% when 'answered' %>
              <div class="badge badge-info"><%= question.status.titleize %></div>
            <% when 'closed' %>
              <div class="badge badge-neutral"><%= question.status.titleize %></div>
            <% else %>
              <div class="badge badge-neutral"><%= question.status.titleize %></div>
            <% end %>
          </td>
          <td class="whitespace-nowrap px-3 py-4 text-sm">
            <%= question.answers.length %>
          </td>
          <td class="relative whitespace-nowrap py-4 pr-4 pl-3 text-right text-sm font-medium sm:pr-6">
            <div class="flex justify-end gap-2">
              <%= link_to "Show", question, class: "inline-flex items-center rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-gray-900 shadow-xs ring-1 ring-gray-300 ring-inset hover:bg-gray-50" %>
              <!-- only show edit and delete if the question has no answers -->
              <% if question.answers.present? %>
                <%= link_to "Edit", edit_question_path(question), class: "inline-flex items-center rounded-md bg-indigo-600 px-2.5 py-1.5 text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
                <%= button_to "Delete", question, method: :delete, class: "inline-flex items-center rounded-md bg-red-600 px-2.5 py-1.5 text-sm font-semibold text-white shadow-xs hover:bg-red-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-600" %>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>